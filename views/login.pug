extends mixins/layout

block content
  .login-body.is-flex.is-justify-content-space-between.is-flex-direction-column
    .site-name.is-flex-direction-row.is-flex.is-align-items-center
      img(src="/images/logo_cryptonix_v2.png" style="width: 4%;").mr-2
      h2 cryptonix
    .columns
      .login.column
        h1.mb-5 Log In
        +flash()
        form(method="post" action="/login").login-form
          input(type="text" placeholder="email" name="email" value=(form !== null) ? form.email: '').input.my-3
          input(type="password" placeholder="password" name="password").input.my-3
          button.button.my-3 Log In
        .mt-5.is-flex.is-flex-direction-row.is-size-7.is-align-items-center
          a(href="/forgotPassword")
            p.muted Forgot password?
          p.middle-dot.muted &#183;
          p.muted Don't have an account?
          a(href="/signup").mx-2
            p.is-size-7.is-bold Sign Up
      .login-info.column.has-text-right
        h1.is-size-1 <span style="font-style: italic; letter-spacing: 8px;">5</span>K+ WALLETS
        p.muted.accent 300K+ TRANSACTIONS
    .socials.is-flex.is-flex-direction-row.is-justify-content-space-between
      .is-flex.is-flex-direction-row
        a(href="#")
          p.mx-2 Facebook
        a(href="#")
          p.mx-2 Twitter
        a(href="#")
          ps.mx-2 Blog
      .is-flex.is-flex-direction-row
        a(href="#")
          p.mx-2.muted Terms of service
        a(href="#")
          p.mx-2.muted Support
