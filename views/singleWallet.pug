extends mixins/layout

block nav
  +sidenav()

block content
  #main
    +topnav()
    .overview.is-flex.is-flex-direction-row.is-justify-content-space-between.is-align-items-center.p-5
      button.button.btn-full
        a(href="/wallets").icon-text
          .icon
            .fas.fa-chevron-left
          h3.is-bold Back
    .wallet.columns.mx-5.py-5
      .column.bg-primary.mr-3.p-5.is-5
        p.pale-grey.is-bold.muted Current balance:
        .is-flex.is-flex-direction-row.py-3
          h1.has-text-white.total 0.00012
          h2.secondary.is-bold.m-4 BTC
        .actions.is-flex.is-flex-direction-row.is-align-items-center
          button.button.bg-accent.btn.column.mx-5.is-flex.is-align-items-center
            h3 Send
          button.button.btn-border.column.mx-5.accent-border.is-flex.is-align-items-center
            h3.has-text-white Receive
        .address.my-6
          .is-flex.is-justify-content-space-between
            p.pale-grey.is-bold.muted Your wallet adress:
            a(href="#")
              h3.secondary QR-code
          button.button.btn-full.column.accent-border.is-flex.is-align-items-center.my-3.width-100.p-5
            h3.pale-grey.muted 0x2348907453984503458734503948750734
        .history
          p.pale-grey.is-bold.muted Wallet history:
          canvas
      .column.bg-primary.ml-3.p-5.pb-6
        p.pale-grey.is-bold.muted Past transactions:
          include mixins/transactionsHelper
          each transaction in transactions
            .pt-4
              +smallTransaction(transaction)



